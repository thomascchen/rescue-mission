<div  class="large-10">
<h3>Edit a Question</h3>
  <%= form_for @question do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit 'Submit' %>
  <% end %>
</div>

<h3><%= link_to "Delete Question", "/questions/" + @question.to_param, method: :delete %></h3>
